#!/bin/bash

COLOR_FOREGROUND="#FF${FOREGROUND:1}"
COLOR_BACKGROUND="#FF${BACKGROUND:1}"
COLOR_ACTIVE_MONITOR_FG="#FF34322E"
COLOR_ACTIVE_MONITOR_BG="#FF58C5F1"
COLOR_INACTIVE_MONITOR_FG="#FF58C5F1"
COLOR_INACTIVE_MONITOR_BG="#FF34322E"
COLOR_FOCUSED_OCCUPIED_FG="#FF${WHITE:1}"
COLOR_FOCUSED_OCCUPIED_BG="#FF${DARKER_GRAY:1}"
COLOR_FOCUSED_FREE_FG=$COLOR_FOCUSED_OCCUPIED_FG
COLOR_FOCUSED_FREE_BG=$COLOR_FOCUSED_OCCUPIED_BG
COLOR_FOCUSED_URGENT_FG=$COLOR_FOCUSED_OCCUPIED_FG
COLOR_FOCUSED_URGENT_BG=$COLOR_FOCUSED_OCCUPIED_BG
COLOR_OCCUPIED_FG="#FF${LIGHTER_GRAY:1}"
COLOR_OCCUPIED_BG=$COLOR_BACKGROUND
COLOR_FREE_FG="#FF${DARK_GRAY:1}"
COLOR_FREE_BG=$COLOR_BACKGROUND
COLOR_URGENT_FG="#FF${RED:1}"
COLOR_URGENT_BG=$COLOR_BACKGROUND
COLOR_LAYOUT_FG=$COLOR_FOREGROUND
COLOR_LAYOUT_BG=$COLOR_BACKGROUND
COLOR_TITLE_FG=$COLOR_FOREGROUND
COLOR_TITLE_BG=$COLOR_BACKGROUND
COLOR_STATUS_FG=$COLOR_FOREGROUND
COLOR_STATUS_BG=$COLOR_BACKGROUND
COLOR_BATTERY_FG="#FF${RED:1}"
COLOR_ICON_FG="#FF${BLUE:1}"
