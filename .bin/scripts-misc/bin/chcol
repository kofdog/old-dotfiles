#!/bin/bash
# Provide three arguments: 1) set, 2) scheme, 3) shade
# e.g. base16 dark default

# Xresources
file=~/.Xresources
dir=".palettes/c-style"
str=$(grep -n "#include \"$dir" $file)
num=$(echo $str | cut -d: -f 1)
terms=(`echo $str | tr '/' ' '`)
sed -i "${num}s/${terms[3]}/$1/" $file
sed -i "${num}s/${terms[4]}/$3/" $file
sed -i "${num}s/${terms[5]:0:${#terms[5]} - 1}/$2/" $file

# bashrc
file=~/.bashrc
scheme="BASE16_SCHEME"
str=$(grep -n $scheme $file)
num=$(echo $str | cut -d: -f 1)
terms=(`echo $str | tr '"' ' '`)
sed -i "${num}s/${terms[1]}/$2/" $file

shade="BASE16_SHADE"
str=$(grep -n $shade $file)
num=$(echo $str | cut -d: -f 1)
terms=(`echo $str | tr '"' ' '`)
sed -i "${num}s/${terms[1]}/$3/" $file

# profile
file=~/.profile

function profile-line {
# 1) nth source line, 2) set, 3) spec
    str=$(grep -nm $1 '^source' $file | tail -n1)
    terms=(`echo $str | tr '/' ' '`)
    slast=${terms[${#terms[@]} - 2]}
    last=${terms[${#terms[@]} - 1]}
    num=$(echo $str | cut -d: -f 1)
    sed -i "${num}s/$slast/$2/" $file
    sed -i "${num}s/$last/$3/" $file
}

profile-line 1 $1 $2
profile-line 2 $1 colors
profile-line 3 $1 $3

colors="COLORS"
str=$(grep -n $colors $file)
num=$(echo $str | cut -d: -f 1)
terms=(`echo $str | tr '"' ' '`)
sed -i "${num}s/${terms[2]}/${1^}/" $file
sed -i "${num}s/${terms[3]}/${2^}/" $file
sed -i "${num}s/${terms[4]}/${3^}/" $file

# bspwmrc
# spectrwm.conf
